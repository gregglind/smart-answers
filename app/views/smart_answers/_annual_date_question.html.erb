<fieldset>
  <label for="response_day">Day
    <%= select_day default_for_date(prefill_value_for(question, :day)) || question.default, prefix: 'response', :prompt => '' %>
  </label>
  <label for="response_month">Month
    <%= select_month default_for_date(prefill_value_for(question, :month)) || question.default, prefix: 'response', prompt: '' %>
  </label>
  <%= hidden_field_tag "response[year]", default_for_date(prefill_value_for(question, :year)) || Date.today.year %>
</fieldset>
